#!/usr/bin/env bash
# installs HAproxy
frontend="frontend front_end\n\tbind *:80\n\tmode http\n\tdefault_backend active_servers\n"
backend="backend active_servers\n\tbalance roundrobin\n\tserver 123004-web-01 18.235.248.24:80 check\n\tserver 123004-web-02 100.25.150.242:80 check"
if [ ! -x /usr/sbin/haproxy ]; then
  apt-get update
  apt-get install -y --no-install-recommends software-properties-common
  add-apt-repository ppa:vbernat/haproxy-2.8
  apt-get install -y haproxy=2.8.\*
  sed -i "34a$frontend" /etc/haproxy/haproxy.cfg
  sed -i "39a$backend" /etc/haproxy/haproxy.cfg
  service haproxy restart
else
  sed -i "34a$frontend" /etc/haproxy/haproxy.cfg
  sed -i "39a$backend" /etc/haproxy/haproxy.cfg
  service haproxy restart
fi
